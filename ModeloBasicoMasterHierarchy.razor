                    worksheet.Range[row, 1].Text = titulo;
                    worksheet.Range[row, 1].CellStyle = headerStyle;
                    worksheet.Range[row, 1, row, 8].Merge();
                    row += 2;

                    // Exportar datos jerárquicos
