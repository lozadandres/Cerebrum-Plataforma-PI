                    {
                        // Información del departamento
                        worksheet.Range[row, 1].Text = "DEPARTAMENTO";
                        worksheet.Range[row, 2].Text = departamento.vcampo2;
                        worksheet.Range[row, 3].Text = "Código";
                        worksheet.Range[row, 4].Text = departamento.vcampo1;
                        worksheet.Range[row, 5].Text = "Código DANE";
                        worksheet.Range[row, 6].Text = departamento.vcampo3;
                        worksheet.Range[row, 7].Text = "País";
                        worksheet.Range[row, 8].Text = departamento.vcampo4;

                        worksheet.Range[row, 1, row, 8].CellStyle = departmentStyle;
                        row++;

                        // Encabezados de ciudades
                        if (departamento.Ciudades != null && departamento.Ciudades.Any())
                        {
                            worksheet.Range[row, 2].Text = "Código Ciudad";
                            worksheet.Range[row, 3].Text = "Nombre Ciudad";
                            worksheet.Range[row, 4].Text = "Código DANE";
                            worksheet.Range[row, 5].Text = "País";
                            worksheet.Range[row, 2, row, 5].CellStyle = cityHeaderStyle;
