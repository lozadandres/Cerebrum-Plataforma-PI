    private async Task CargarTodasLasCiudades()
    {
        try
        {
            if (Orders == null || !Orders.Any())
                return;

            // Cargar ciudades para todos los departamentos de una vez
            using (NpgsqlConnection conn = new NpgsqlConnection(xcadena))
            {
                await conn.OpenAsync();

                // Consulta SQL para obtener todas las ciudades con sus departamentos
                string sql = @"select t3.codigociudad, t3.nombreciudad, t3.codigodepartamento,
                               t1.codigodanedepartamento, t2.nombrepais
                               from uciudades as t3
                               inner join udepartamentos as t1 on t3.codigodepartamento = t1.codigodepartamento
                               left join upaises as t2 on t1.codigopais = t2.codigopais
                               order by t1.nombredepartamento, t3.nombreciudad";

                using (NpgsqlCommand cmd = new NpgsqlCommand(sql, conn))
                using (NpgsqlDataReader reader = await cmd.ExecuteReaderAsync())
                {
                    while (await reader.ReadAsync())
                    {
                        string codigoDepartamento = reader["codigodepartamento"].ToString();

                        // Buscar el departamento correspondiente en Orders
                        var departamento = Orders.FirstOrDefault(o => o.vcampo1 == codigoDepartamento);

                        if (departamento != null)
                        {
                            Ciudad ciudad = new Ciudad
                            {
                                CodigoCiudad = reader["codigociudad"].ToString(),
                                NombreCiudad = reader["nombreciudad"].ToString(),
                                CodigoDepartamento = reader["codigodepartamento"].ToString(),
                                vcampo1 = reader["codigociudad"].ToString(),
                                vcampo2 = reader["nombreciudad"].ToString(),
                                vcampo3 = reader["codigodanedepartamento"]?.ToString(),
                                vcampo4 = reader["nombrepais"]?.ToString()
                            };

                            departamento.Ciudades.Add(ciudad);
                        }
                    }
                }
            }
        }
        catch (Exception ex)
        {
            NotificationService.Notify(NotificationSeverity.Error, "Error", $"Error al cargar todas las ciudades: {ex.Message}");
        }
    }

