                                cityRow.Cells[0].Value = ciudad.vcampo1 ?? "";
                                cityRow.Cells[1].Value = ciudad.vcampo2 ?? "";
                                cityRow.Cells[2].Value = ciudad.vcampo3 ?? "";
                                cityRow.Cells[3].Value = ciudad.vcampo4 ?? "";
                            }

                            cityGrid.Style.Font = contentFont;
                            cityGrid.Style.CellPadding = new PdfPaddings(3, 3, 3, 3);

                            // Configurar layout para manejar saltos de página automáticamente
                            PdfGridLayoutFormat cityLayoutFormat = new PdfGridLayoutFormat();
                            cityLayoutFormat.Layout = PdfLayoutType.Paginate;
                            cityLayoutFormat.Break = PdfLayoutBreakType.FitPage;

                            // Dibujar la tabla de ciudades
                            PdfGridLayoutResult cityResult = cityGrid.Draw(page, new PointF(20, yPosition), cityLayoutFormat);

                            // Actualizar la página actual si la tabla se extendió a nuevas páginas
                            if (cityResult.Page != page)
                            {
                                page = cityResult.Page;
                                graphics = page.Graphics;
                            }

                            yPosition = cityResult.Bounds.Bottom + 25;
                        }
                        else
                        {
                            // Verificar espacio para el mensaje
                            if (yPosition + 30 > pageHeight - bottomMargin)
                            {
                                page = document.Pages.Add();
                                graphics = page.Graphics;
                                yPosition = 20;
                            }

