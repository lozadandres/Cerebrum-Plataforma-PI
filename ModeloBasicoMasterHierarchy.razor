                        if (departamento.Ciudades != null && departamento.Ciudades.Any())
                        {
                            // Verificar si hay espacio suficiente para al menos el encabezado y una fila
                            if (yPosition + 60 > pageHeight - bottomMargin)
                            {
                                page = document.Pages.Add();
                                graphics = page.Graphics;
                                yPosition = 20;
                            }

                            PdfGrid cityGrid = new PdfGrid();
                            cityGrid.Columns.Add(4); // Código, Nombre, Código DANE, País

                            // Configurar anchos de columnas
                            cityGrid.Columns[0].Width = 80;  // Código Ciudad
                            cityGrid.Columns[1].Width = 150; // Nombre Ciudad
                            cityGrid.Columns[2].Width = 100; // Código DANE
                            cityGrid.Columns[3].Width = 100; // País

