                        new PointF(pageWidth, 45));

                    // Dibujar footer
                    PdfGraphics footerGraphics = footer.Graphics;
                    footerGraphics.DrawLine(new PdfPen(PdfBrushes.Gray, 1), new PointF(0, 5),
                        new PointF(pageWidth, 5));
