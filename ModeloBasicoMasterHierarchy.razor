                    headerStyle.Font.Bold = true;
                    headerStyle.Font.Color = ExcelKnownColors.White;
                    headerStyle.Color = Color.FromArgb(42, 118, 189);
                    headerStyle.HorizontalAlignment = ExcelHAlign.HAlignCenter;
                    

                    IStyle departmentStyle = workbook.Styles.Add("DepartmentStyle");
                    departmentStyle.Font.Bold = true;
                    departmentStyle.Color = Color.FromArgb(173, 216, 230);
                    

                    IStyle cityHeaderStyle = workbook.Styles.Add("CityHeaderStyle");
                    cityHeaderStyle.Font.Bold = true;
                    cityHeaderStyle.Color = Color.FromArgb(220, 220, 220);
                    

                    int row = 1;

